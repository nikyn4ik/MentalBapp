<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MentalBapp.AddEdit.Registration"
             Title="Registration">
    <VerticalStackLayout>
        <Label 
            Text="Register an Account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="AgeEntry" Placeholder="Age" Keyboard="Numeric" />
        <Picker x:Name="GenderPicker" Title="Gender" SelectedIndexChanged="GenderPickers">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Don't specify</x:String>
                    <x:String>they/them</x:String>
                    <x:String>she/her</x:String>
                    <x:String>Custom</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="CustomG" Placeholder="Custom Gender" IsVisible="False" />
        <Entry x:Name="LocationEntry" Placeholder="Location" />
        <Button Text="Register" Clicked="RegisterB" />
    </VerticalStackLayout>
</ContentPage>
